        <layer-list>
            <!-- SHADOW LAYER -->
            <item>
                <shape>
                    <solid android:color="#66000000" />
                    <corners android:radius="30dip"/>
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item android:bottom="3dp" android:right="3dp" android:drawable="@drawable/onclickbutton">

            </item>
        </layer-list>
    </item>



